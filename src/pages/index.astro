---
import { Image } from "astro:assets";

import RootLayout from "@/layouts/RootLayout.astro";

import { Slideshow } from "@/components/Slideshow";

const kegiatan = [
	{
		judul: "Hari Besar Nasional",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
	{
		judul: "Pemberdayaan Remaja",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
	{
		judul: "Aksi Sosial",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
];
import hero from "@/assets/hero.jpg";
---

<RootLayout>
	<section
		class="relative z-[-1] flex min-h-dvh flex-col items-center justify-center bg-[url('/hero.jpg')] bg-cover bg-fixed bg-center bg-no-repeat tracking-tight text-white after:absolute after:top-0 after:left-0 after:z-[-1] after:h-full after:w-full after:bg-linear-to-t after:from-black/65 after:to-black/15"
	>
		<h1 class="pt-8 text-center text-7xl leading-snug font-semibold tracking-tighter">
			Ikatan Pemuda Taman Asri
		</h1>
		<p class="text-center text-2xl font-medium">Lorem Ipsum Tagline</p>
	</section>

	<section class="min-h-dvh px-6 py-20 tracking-tight sm:px-10 md:px-14 lg:px-20 xl:px-24">
		<h2 class="text-4xl font-semibold tracking-tighter">Kegiatan</h2>
		<div class="mb-4 h-[2px] w-full bg-neutral-300"></div>
		<div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
			{
				kegiatan.map((item) => (
					<div class="flex h-full flex-col gap-1 rounded border pb-4 tracking-tight">
						<Image src={hero} alt="" class="h-auto w-full pb-4" />
						<h3 class="px-4 text-2xl font-semibold">{item.judul}</h3>
						<p class="px-4 text-lg font-medium text-neutral-400">{item.deskripsi}</p>
					</div>
				))
			}
		</div>
	</section>

	<section
		class="flex min-h-dvh flex-col gap-1 px-6 py-20 tracking-tight sm:px-10 md:px-14 lg:px-20 xl:px-24"
	>
		<h2 class="text-4xl font-semibold tracking-tighter">Acara Lalu</h2>
		<div class="mb-4 h-[2px] w-full bg-neutral-300"></div>
		<Slideshow client:load />
	</section>
</RootLayout>
