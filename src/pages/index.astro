---
import { Image } from "astro:assets";
import { Users } from "@lucide/astro";

import { Button, buttonVariants } from "@/components/ui/button";
import { Separator } from "@/components/ui/separator";

import RootLayout from "@/layouts/RootLayout.astro";

import { Slideshow } from "@/components/Slideshow";
import hero from "@/assets/hero.jpg";

const kegiatan = [
	{
		judul: "Hari Besar Nasional",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
	{
		judul: "Pemberdayaan Remaja",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
	{
		judul: "Aksi Sosial",
		deskripsi:
			"Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, quae nihil molestias vero, nam nemo rem veniam iusto cumque voluptatem illum voluptatibus odit sapiente doloremque eos itaque ipsum. Magni, ipsa?",
	},
];

const stats = [
	{
		label: "Anggota",
		value: "100+",
	},
	{
		label: "Kegiatan",
		value: "20+",
	},
	{
		label: "Acara Perlombaan",
		value: "5+",
	},
];
---

<RootLayout>
	<section
		class="relative z-[-1] flex min-h-svh flex-col items-center justify-center bg-[url('/hero.jpg')] bg-cover bg-fixed bg-center bg-no-repeat tracking-tight after:absolute after:top-0 after:left-0 after:z-[-1] after:h-full after:w-full after:bg-linear-to-t after:from-black/65 after:to-black/15"
	>
		<h1 class="pt-8 text-center text-7xl leading-snug font-semibold tracking-tighter text-white">
			Ikatan Pemuda Taman Asri
		</h1>
		<p class="text-center text-2xl font-medium text-white">Lorem Ipsum Tagline</p>
		<a href="/gabung" class={buttonVariants({ variant: "default" })}>
			<Users />Bergabung Dengan Kami
		</a>
	</section>

	<section
		class="min-h-svh space-y-1 px-6 py-20 tracking-tight sm:px-10 md:px-14 lg:px-20 xl:px-24"
	>
		<h2 class="text-4xl font-semibold tracking-tighter">Kegiatan</h2>
		<Separator className="mb-2" />
		<div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
			{
				kegiatan.map((item) => (
					<div class="flex h-full flex-col gap-1 rounded border pb-4 tracking-tight">
						<Image src={hero} alt="" class="h-auto w-full pb-4" />
						<h3 class="px-4 text-2xl font-semibold">{item.judul}</h3>
						<p class="px-4 text-lg font-medium text-neutral-400">{item.deskripsi}</p>
					</div>
				))
			}
		</div>
	</section>

	<section
		class="flex min-h-svh flex-col gap-1 px-6 py-20 tracking-tight sm:px-10 md:px-14 lg:px-20 xl:px-24"
	>
		<h2 class="text-4xl font-semibold tracking-tighter">Acara Lalu</h2>
		<Separator className="mb-2" />
		<Slideshow client:load />
	</section>

	<section class="px-6 py-24 sm:px-10 md:px-14 lg:px-20 xl:px-24">
		<h2 class="sr-only">Dalam Angka</h2>
		<ul class="grid grid-cols-3 text-center">
			{
				stats.map((stat) => (
					<li class="flex flex-col items-center">
						<span class="text-4xl font-bold tracking-tight">{stat.value}</span>
						<span class="text-lg font-medium text-muted-foreground">{stat.label}</span>
					</li>
				))
			}
		</ul>
	</section>

	<section
		class="flex min-h-svh flex-col items-center justify-center gap-4 bg-blue-600 px-6 py-20 text-center tracking-tight text-white sm:px-10 md:px-14 lg:px-20 xl:px-24 dark:bg-blue-900"
	>
		<div class="space-y-2">
			<h2 class="text-4xl font-semibold tracking-tighter sm:text-5xl lg:text-6xl">
				Ingin Bekerja Bersama Kami?
			</h2>
			<p class="max-w-prose text-lg leading-tight tracking-tight sm:text-xl sm:leading-normal">
				Jadilah bagian dari komunitas kami dan bantu kami dalam mewujudkan visi dan misi kami.
			</p>
		</div>
		<div class="space-x-2">
			<a href="mailto:rafli.malik@gmail.com" class={buttonVariants({ variant: "default" })}>
				Kontak
			</a>
			<a
				href="/galeri"
				class={buttonVariants({ variant: "outline", className: "text-foreground" })}
			>
				Galeri
			</a>
		</div>
	</section>
</RootLayout>
